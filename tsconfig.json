{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "module": "ESNext",
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./dist/",
    "declarationMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
