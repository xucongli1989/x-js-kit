{
  "name": "x-js-kit",
  "version": "4.4.1",
  "description": "This is my javascript toolkit. ",
  "main": "./dist/index.js",
  "scripts": {
    "check": "echo Checking the version number of the dependent package... && x-package-version-strict-check && echo Checking code quality... && eslint ./",
    "build_ts": "tsc --emitDeclarationOnly && babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline && tsc --emitDeclarationOnly --declarationDir lib",
    "copy": "cpy --cwd=dist index.d.ts ./ --rename=index.polyfill.d.ts && cpy --cwd=dist index.d.ts.map ./ --rename=index.polyfill.d.ts.map",
    "dev": "npm run check && webpack  --mode=development --progress",
    "dist": "npm run check && webpack  --mode=production --progress && npm run build_ts && npm run copy && npm run test",
    "test": "jest --coverage --logHeapUsage",
    "start": "webpack-dev-server",
    "release": "standard-version",
    "ct": "git-cz -a"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xucongli1989/x-js-kit.git"
  },
  "files": [
    "dist",
    "lib"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "keywords": [
    "javascript",
    "toolkit",
    "js",
    "helper",
    "library"
  ],
  "author": "XCL",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/xucongli1989/x-js-kit/issues"
  },
  "homepage": "https://github.com/xucongli1989/x-js-kit#readme",
  "devDependencies": {
    "@babel/cli": "7.6.2",
    "@babel/core": "7.6.2",
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "7.6.2",
    "@babel/plugin-transform-async-to-generator": "7.5.0",
    "@babel/preset-env": "7.6.2",
    "@babel/preset-typescript": "7.6.0",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.8",
    "@typescript-eslint/parser": "2.3.1",
    "babel-loader": "8.0.6",
    "clean-webpack-plugin": "2.0.2",
    "commitizen": "4.0.3",
    "cpy-cli": "2.0.0",
    "eslint": "6.4.0",
    "eslint-config-google": "0.14.0",
    "html-webpack-exclude-assets-plugin": "0.0.7",
    "html-webpack-plugin": "3.2.0",
    "jest": "24.9.0",
    "localStorage": "1.0.4",
    "standard-version": "7.0.0",
    "ts-jest": "24.1.0",
    "typescript": "3.6.3",
    "webpack": "4.41.0",
    "webpack-cli": "3.3.9",
    "webpack-dev-server": "3.8.1",
    "x-package-version-strict-check": "1.7.0"
  },
  "dependencies": {
    "@babel/polyfill": "7.6.0"
  },
  "engines": {
    "node": ">=8.12.0"
  }
}
